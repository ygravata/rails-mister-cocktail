<div class="home-banner text-center">
  <div class="d-flex flex-column justify-content-around" id="banner-content">
    <h1 class="align-self-center" href="<%=  cocktails_path  %>">The art of drinking</h1>
    <h4><em><span id="banner-typed-text"></span></em></h4>
    <div>
      <a class="btn btn-dark" href="<%= new_cocktail_path %>">New Drink</a>
    </div>
  </div>
</div>

<div class="row justify-content-around pt-5" style="margin-right: 0px; margin-left: 0px;">
  <% @cocktails.each do |cocktail|%>
    <div class="col-sm-2-md-3 m-1 p-2">
      <%= link_to cocktail_path(cocktail), class: 'link-style', style: 'text-decoration:none;' do %>
        <div class="text-center card-style d-flex justify-content-center align-items-center" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= cl_image_path cocktail.photo.key, width: 200, height: 200, crop: :scale %>'); text-decoration: none; color: white; border-radius: 12px;">
          <p style="font-size: 20px; font-weight: bold;"><%= cocktail.name %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


