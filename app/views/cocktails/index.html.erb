<div class="home-banner text-center">
  <div class="d-flex flex-column justify-content-around" id="banner-content">
    <h1 class="align-self-center" href="<%=  cocktails_path  %>">The art of drinking</h1>
    <h4><em><span id="banner-typed-text"></span></em></h4>
    <div>
      <a class="btn btn-new" href="<%= new_cocktail_path %>">New Drink</a>
    </div>
  </div>
</div>

<div class="row justify-content-around">
  <% @cocktails.each do |cocktail|%>
    <div class="col-sm-2-md-3 m-1 p-2">
      <%= link_to cocktail_path(cocktail), style: 'text-decoration:none;' do %>
        <div class="card text-center card-style">
          <%= cl_image_tag  cocktail.photo.key, width: 200, height: 200, crop: :scale, :style=>"background-size:cover;" %>
          <div class="card-body d-flex align-items-center justify-content-center">
            <h4 class="card-title"><%= cocktail.name %></h4>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


