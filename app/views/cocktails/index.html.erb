<div class="home-banner text-center">

  <div class="d-flex flex-column justify-content-around" id="banner-content">

    <h1 class="align-self-center" href="<%=  cocktails_path  %>">The art of drinking</h1>
    <h4><em><span id="banner-typed-text"></span></em></h4>
    <div>
      <a class="btn btn-new" href="<%= new_cocktail_path %>">New Drink</a>
    </div>
  </div>
</div>

<div class="row justify-content-around">
  <% @cocktails.each do |cocktail|%>
    <div class="col-sm-2-md-3 m-1 p-2">
        <div class="card text-center card-style">
        <%= cl_image_path  cocktail.photo.key, height: 300, width: 288, crop: :scale %>
        <div class="card-body">
            <h4 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail), :id=>"card-link-style" %></h4>
          </div>
        </div>
      </div>
  <% end %>
</div>


