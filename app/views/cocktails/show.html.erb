<div class="background-container">
<div class="">

  <div class="d-flex justify-content-between pt-3">
    <h2><%= @cocktail.name %></h2>
    <div >
      <%= link_to 'Back', root_path  %>
      <%= link_to "Add an instruction", new_cocktail_dose_path(@cocktail) %>
       <%= link_to "Remove",
                        cocktail_path(@cocktail),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, :class => "btn btn-sm", :style=> "background-color: #222831; color: #ececec;"%>
    </div>
  </div>


  <table class="table table-sm table-bordered table-dark" style="width: 400px;">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Ingredient</th>
        <th scope="col">Description</th>
        <th scope="col">Remove</th>
      </tr>
    </thead>

    <tbody>
      <%number = 0 %>
      <% @cocktail.doses.each do |dose|%>
      <tr>
        <th scope="row"><%= number = number+1 %></th>
        <td><%= dose.ingredient.name%></td>
        <td><%= dose.description%></td>
        <td>
          <%= link_to "Remove",
                          dose_path(dose),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>


  </div>




</div>
